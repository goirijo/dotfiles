    <menu id="apps-utils-menu" label="Utilities">
        <item label="VirtualBox">
            <action name="Execute">
                <command>virtualbox</command>
                <startupnotify><enabled>yes</enabled></startupnotify>
            </action>
        </item>
        <item label="Terminal">
            <action name="Execute">
                <command>terminator</command>
                <startupnotify>
                    <enabled>yes</enabled>
                </startupnotify>
            </action>
        </item>
    </menu>

    <menu id="system-prefs" label="Settings">
        <item label="AR+R">
            <action name="Execute">
                <command>arandr</command>
                <startupnotify><enabled>yes</enabled></startupnotify>
            </action>
        </item>
        <item label="Sound Manager">
            <action name="Execute">
                <command>pavucontrol</command>
                <startupnotify><enabled>yes</enabled></startupnotify>
            </action>
        </item>
        <item label="Appearance">
